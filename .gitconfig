[alias]
      br = branch
      ci = commit
      co = checkout
      log1 = log --pretty=oneline --abbrev-commit
      lg = log --graph --pretty=format:'%Cred%h..%Creset - %s %Cgreen(%cr)%Creset - %an' --abbrev-commit --date=relative
      st = status
[color]
      branch = auto
      diff = auto
      status = auto
[core]
      editor = vim
      excludesfile = ~/.gitignore_global
[rerere]
      enabled = true
